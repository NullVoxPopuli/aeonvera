= javascript_include_tag "jquery.countdown.min"

javascript:
  $(function(){
    $("h2.countdown").countdown('#{@date.strftime("%Y/%m/%d %H:%M:%S")}', function(event) {
      $(this).html(event.strftime('%w weeks %d days %H:%M:%S'));
    });
  });


