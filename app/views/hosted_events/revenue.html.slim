  / - [@day_reports, @evening_reports, @pre_evening_reports].each do |report|
  /   br
  /   h4.left.clearfix = report.delete(:name)
  /   - report.each do |day, data|
  /     - next if not data.present? && data[:payment_breakdown]
  /     table.left.clearfix
  /       thead
  /         tr
  /           th colspan='2' = day
  /         tr
  /           th = data[:start].strftime('%I:%M %P')
  /           th = data[:ending].strftime('%I:%M %P')
  /       tbody
  /         - data[:payment_breakdown].each do |payment_type, amount|
  /           tr
  /             td = payment_type
  /             td = number_to_currency(amount)
  /         cr
  /           td: b Total
  /           td: b = number_to_currency(data[:total])
  /         tr
  /           td PayPal Fees
  /           td = number_to_currency(data[:paypal_fees])
  /         tr
  /           td: b Net Total
  /           td: b = number_to_currency(data[:net])

